  services.autorandr = {
    enable = true;
    profiles =
      let
        fingerprints = {
          laptop = "";
          home_monitor = "";
        };
      in
      {
        "undocked" = {
          fingerprint = {
            eDP-1 = fingerprints.laptop;
          };
          config = {
            eDP-1 = {
              enable = true;
